#!/bin/bash

function start() {
	if [ -d "$OPENSHIFT_DATADOG_DIR/dd-agent" ]
	then
		printf "Starting the agent...\n"
		$OPENSHIFT_DATADOG_DIR/dd-agent/bin/agent start > /dev/null 2>&1 &
	fi
}

function stop() {
	if [ -d "$OPENSHIFT_DATADOG_DIR/dd-agent/" ]
	then
		printf "Stopping the agent...\n"
		
		# Remove .pid and .sock files, they should not be there if the agent is not running
		# but there is a weird behavior when the OpenShift app is put in "idle" state.
	    	rm -f $OPENSHIFT_DATADOG_DIR/dd-agent/supervisord/*.sock
                rm -f $OPENSHIFT_DATADOG_DIR/dd-agent/supervisord/*.pid	
                
		$OPENSHIFT_DATADOG_DIR/dd-agent/bin/agent stop
	fi
}

function status {
	if [ -d "$OPENSHIFT_DATADOG_DIR/dd-agent/" ]
	then $OPENSHIFT_DATADOG_DIR/dd-agent/bin/agent status
	fi
}

function restart() {
	if [ -d "$OPENSHIFT_DATADOG_DIR/dd-agent/" ]
	then $OPENSHIFT_DATADOG_DIR/dd-agent/bin/agent restart
	fi
}

function info() {
	if [ -d "$OPENSHIFT_DATADOG_DIR/dd-agent/" ]
	then $OPENSHIFT_DATADOG_DIR/dd-agent/bin/info
	fi
}

# Handle commands
case "$1" in
  start)           start ;;
  stop)            stop ;;
  restart)         restart ;;
  status)          status ;;
  info)          info ;;
  *)               exit 0
esac
